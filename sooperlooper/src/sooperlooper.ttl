@prefix lv2:  <http://lv2plug.in/ns/lv2core#>.
@prefix doap: <http://usefulinc.com/ns/doap#>.
@prefix mod: <http://portalmod.com/ns/modgui#>.
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.

<http://portalmod.com/plugins/sooperlooper>
  a lv2:Plugin, lv2:UtilityPlugin;
  lv2:binary <sooperlooper.so>;
  doap:name "SooperLooper";
  doap:license <http://usefulinc.com/doap/licenses/gpl>;

  lv2:minorVersion 0;
  lv2:microVersion 9;

rdfs:comment """
Basic looping plugin

""";

  lv2:port [
    a lv2:AudioPort, lv2:InputPort;
    lv2:index 0;
    lv2:symbol "input";
    lv2:name "input";
  ],

  [
    a lv2:AudioPort, lv2:OutputPort;
    lv2:index 1;
    lv2:symbol "output";
    lv2:name "output";
  ],

  [
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 2;
    lv2:symbol "play_pause";
    lv2:name "Play/Pause";      
    lv2:default 0;
    lv2:minimum 0;
    lv2:maximum 1;
    lv2:portProperty lv2:toggled ;
  ],

  [
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 3;
    lv2:symbol "record";
    lv2:name "Record";
    lv2:default 0;
    lv2:minimum 0;
    lv2:maximum 1;
    lv2:portProperty lv2:toggled ;
  ],

  [
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 4;
    lv2:symbol "reset";
    lv2:name "Reset";
    lv2:default 0;
    lv2:minimum 0;
    lv2:maximum 1;
    lv2:portProperty lv2:toggled, <http://lv2plug.in/ns/ext/port-props#trigger> ;
  ],
   
  [
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 5;
    lv2:symbol "undo";
    lv2:name "Undo";
    lv2:default 0;
    lv2:minimum 0;
    lv2:maximum 1;
    lv2:portProperty lv2:toggled, <http://lv2plug.in/ns/ext/port-props#trigger> ;
  ],

  [
    a lv2:ControlPort, lv2:InputPort;
    lv2:index 6;
    lv2:symbol "redo";
    lv2:name "Redo";
    lv2:default 0;
    lv2:minimum 0;
    lv2:maximum 1;
    lv2:portProperty lv2:toggled, <http://lv2plug.in/ns/ext/port-props#trigger> ;
  ];
      mod:gui [
        a mod:Gui;
        mod:resourcesDirectory <modgui>;
        mod:iconTemplate <modgui/sooperlooper.html>;
        mod:templateData <modgui/data-sooperlooper.json>;
        mod:screenshot <modgui/SooperLooper.png>;
        mod:thumbnail <modgui/SooperLooper-thumb.png>;
    ] .
